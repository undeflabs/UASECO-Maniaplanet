<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<settings>
	<!-- Documentation: http://doc.maniaplanet.com/creation/maniascript/libraries/library-ui.html -->
	<ui_properties>
		<!-- The map name and author displayed in the top right of the screen when viewing the scores table -->
		<map_info>
			<visible>true</visible>
			<pos>
				<x>-160.0</x>
				<y>80.0</y>
				<z>150.0</z>
			</pos>
		</map_info>

		<!-- Information about live envent displayed in the top right of the screen -->
		<live_info>
			<visible>true</visible>
			<pos>
				<x>-159.0</x>
				<y>84.0</y>
				<z>5.0</z>
			</pos>
		</live_info>

		<!-- Only visible in solo modes, it hides the medal/ghost selection UI -->
		<opponents_info>
			<visible>true</visible>
		</opponents_info>

		<!--
		The server chat displayed on the bottom right of the screen,
		the offset values range from 0.0 to -3.2 for x and from 0.0 to 1.8 for y,
		the linecount property must be between 0 and 40
		//-->
		<chat>
			<visible>true</visible>
			<offset>
				<x>-0.015</x>
				<y>0.0</y>
			</offset>
			<linecount>7</linecount>
		</chat>

		<!-- The avatar of the last player speaking in the chat displayed above the chat -->
		<chat_avatar>
			<visible>true</visible>
		</chat_avatar>

		<!-- Checkpoint time information displayed in the middle of the screen when crossing a checkpoint -->
		<checkpoint_time>
			<visible>true</visible>
			<pos>
				<x>-8.0</x>
				<y>25.8</y>
				<z>-10.0</z>
			</pos>
		</checkpoint_time>

		<!-- Time of the players at the current checkpoint displayed at the bottom of the screen -->
		<checkpoint_list>
			<visible>true</visible>
			<pos>
				<x>48.0</x>
				<y>-52.0</y>
				<z>5.0</z>
			</pos>
		</checkpoint_list>

		<!-- Player's ranking at the latest checkpoint -->
		<checkpoint_ranking>
			<visible>true</visible>
			<pos>
				<x>0.0</x>
				<y>84.0</y>
				<z>5.0</z>
			</pos>
		</checkpoint_ranking>

		<!-- Small scores table displayed at the end of race of the round based modes (Rounds, Cup, ...) on the right of the screen -->
		<round_scores>
			<visible>true</visible>
			<pos>
				<x>-158.5</x>
				<y>40.0</y>
				<z>150.0</z>
			</pos>
		</round_scores>

		<!-- Race time left displayed at the bottom right of the screen -->
		<countdown>
			<visible>true</visible>
			<pos>
				<x>153.0</x>
				<y>-7.0</y>
				<z>5.0</z>
			</pos>
		</countdown>

		<!-- 3, 2, 1, Go! message displayed on the middle of the screen when spawning -->
		<go>
			<visible>true</visible>
		</go>

		<!-- Current race chrono displayed at the bottom center of the screen -->
		<chrono>
			<visible>true</visible>
			<pos>
				<x>0.0</x>
				<y>-80.0</y>
				<z>5.0</z>
			</pos>
		</chrono>

		<!-- Speed and distance raced displayed in the bottom right of the screen -->
		<speed_and_distance>
			<visible>true</visible>
			<pos>
				<x>137.0</x>
				<y>-69.0</y>
				<z>5.0</z>
			</pos>
		</speed_and_distance>

		<!-- Previous and best times displayed at the bottom right of the screen -->
		<personal_best_and_rank>
			<visible>true</visible>
			<pos>
				<x>157.0</x>
				<y>-24.0</y>
				<z>5.0</z>
			</pos>
		</personal_best_and_rank>

		<!-- Current position in the map ranking displayed at the bottom right of the screen -->
		<position>
			<visible>true</visible>
			<pos>
				<x>150.5</x>
				<y>-28.0</y>
				<z>5.0</z>
			</pos>
		</position>

		<!-- Warm-up progression displayed on the right of the screen during warm-up -->
		<warmup>
			<visible>true</visible>
			<pos>
				<x>153.0</x>
				<y>13.0</y>
				<z>0.0</z>
			</pos>
		</warmup>

		<!-- Ladder progression box displayed on the top of the screen at the end of the map -->
		<endmap_ladder_recap>
			<visible>true</visible>
		</endmap_ladder_recap>

		<!-- Laps count displayed on the right of the screen on multilaps map -->
		<multilap_info>
			<visible>true</visible>
			<pos>
				<x>140.0</x>
				<y>84.0</y>
				<z>5.0</z>
			</pos>
		</multilap_info>

		<!-- Information about the spectated player displayed in the bottom of the screen -->
		<spectator_info>
			<visible>true</visible>
			<pos>
				<x>0.0</x>
				<y>-68.0</y>
				<z>5.0</z>
			</pos>
		</spectator_info>
	</ui_properties>



	<!--
	Documentation: http://doc.maniaplanet.com/dedicated-server/settings-list.html#All%2D%2DModeBase%2D
	//-->
	<modebase>
		<!-- Chat time in seconds at the end of the map -->
		<chat_time>20</chat_time>

		<!-- Allow the players to respawn ('true') or not ('false') -->
		<allow_respawn>true</allow_respawn>

		<!-- Duration of the warm up phase in rounds (e.g. '2' for two warm up rounds), set to '-1' to disable warm up -->
		<warm_up_duration>-1</warm_up_duration>

		<!--
		Path/URL to a scores table style from an XML file,
		see for details: http://doc.maniaplanet.com/dedicated-server/customize-scores-table.html
		//-->
		<scores_table_style_path></scores_table_style_path>
	</modebase>



	<modesetup>
		<!--
		Settings for TimeAttack.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#TimeAttack
		//-->
		<timeattack>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>
		</timeattack>



		<!--
		Settings for Rounds.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#RoundsBase
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#Rounds%2D%2D%2DRoundsBase%2D
		//-->
		<rounds>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>99</points_limit>

			<!-- Let you limit the number of rounds to play on a map before going to the next one. If the value is negative, the limit is disabled. -->
			<rounds_per_map>-1</rounds_per_map>

			<!-- Let you select on how many maps a match will be played. If the value is negative, the limit is disabled. -->
			<maps_per_match>-1</maps_per_match>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!--
			Set to 'true' to use alternate rules, otherwise 'false',
			see 'rounds_usenewrules' for details: http://wiki.maniaplanet.com/en/Dedicated_servers#The_configuration_of_the_rounds_mode
			//-->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_laps_number>-1</force_laps_number>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- Set to 'true' to continue to play the Map until the tie is broken, otherwise 'false' -->
			<use_tie_break>true</use_tie_break>
		</rounds>




		<!--
		Settings for Team.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#RoundsBase
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#Team%2D%2D%2DRoundsBase%2D
		//-->
		<team>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>5</points_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!--
			Set to 'true' to use alternate rules, otherwise 'false',
			see 'team_usenewrules' for details: http://wiki.maniaplanet.com/en/Dedicated_servers#The_configuration_of_the_team_mode
			//-->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_laps_number>-1</force_laps_number>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- The maxium number of points attributed to the first Player to cross the finish line -->
			<max_points_per_round>6</max_points_per_round>

			<!-- The number of points lead a team must have to win the Map -->
			<points_gap>1</points_gap>

			<!-- Set to 'true' to use the Players clublinks, or otherwise use the default teams, otherwise 'false' -->
			<use_player_clublinks>false</use_player_clublinks>

			<!-- Maximum number of players per team in matchmaking -->
			<max_players_per_team>5</max_players_per_team>

			<!-- Minimum number of players per team in matchmaking -->
			<min_players_per_team>2</min_players_per_team>
		</team>




		<!--
		Settings for Laps.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#Laps
		//-->
		<laps>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>1200</time_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' to disable -->
			<finish_timeout>10</finish_timeout>

			<!-- Force number of laps, '-1' to disable -->
			<force_laps_number>5</force_laps_number>
		</laps>




		<!--
		Settings for Cup.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#RoundsBase
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#Cup%2D%2D%2DRoundsBase%2D
		//-->
		<cup>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>99</points_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!-- Does not have any effect in this mode, let the default 'false' -->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_laps_number>-1</force_laps_number>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- Defines the number of rounds to do by the Players before changing map -->
			<rounds_per_map>5</rounds_per_map>

			<!-- Defines the number of winners determined by victory with the finalist's status -->
			<number_of_winners>3</number_of_winners>

			<!-- Duration of the warm up phase in rounds (e.g. '2' for two warm up rounds), set to '-1' to disable warm up -->
			<warm_up_duration>2</warm_up_duration>

			<!-- Maximum number of players in matchmaking -->
			<max_players_number>4</max_players_number>

			<!-- Minimum number of players in matchmaking -->
			<min_players_number>4</min_players_number>
		</cup>




		<!--
		Settings for TeamAttack.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#TeamAttack
		//-->
		<teamattack>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>

			<!-- Minimum number of Players per clan -->
			<min_player_per_clan>3</min_player_per_clan>

			<!-- Maximum number of Players per clan -->
			<max_player_per_clan>3</max_player_per_clan>

			<!-- Maximum number of clans, set to '-1' to disable -->
			<max_clan_number>-1</max_clan_number>
		</teamattack>




		<!--
		Settings for Chase.Script.txt
		http://doc.maniaplanet.com/dedicated-server/settings-list.html#Chase
		//-->
		<chase>
			<!-- Time limit (0 to disable, < 0 automatic, based on author time) -->
			<time_limit>900</time_limit>

			<!-- Map points limit -->
			<map_points_limit>3</map_points_limit>

			<!-- Round points limit (0 to disable, negative values automatic based on number of checkpoints) -->
			<round_points_limit>-5</round_points_limit>

			<!-- The number of round points lead a team must have to win the round -->
			<round_points_gap>3</round_points_gap>

			<!-- Maximum number of give up per team -->
			<give_up_max>1</give_up_max>

			<!-- Minimum number of players in a team, min. 2 -->
			<min_players_number>2</min_players_number>

			<!-- Number of Laps (-1 to use the map default, 0 to disable laps limit) -->
			<force_laps_number>3</force_laps_number>

			<!-- Finish timeout (< 0 automatic, based on author time) -->
			<finish_timeout>-1</finish_timeout>

			<!-- Display a big red message in the middle of the screen of the player that crosses a checkpoint when it wasn't it's turn. -->
			<display_warning>true</display_warning>

			<!-- Use the players' clublinks, or otherwise use the default teams -->
			<use_player_clublinks>false</use_player_clublinks>

			<!-- Maximum number of players per team in matchmaking -->
			<max_number_players_per_team>3</max_number_players_per_team>

			<!-- Minimum number of players per team in matchmaking -->
			<min_number_players_per_team>3</min_number_players_per_team>

			<!-- In this mode only players that take a slot in a team during the warm up can play, the others will have to spec until they can get a free slot in a team. -->
			<competitive_mode>false</competitive_mode>

			<!--  Put the waypoint events in a buffer for 500ms to avoid errors in the checkpoint order check. -->
			<waypoint_event_delay>500</waypoint_event_delay>

			<!--  Allow to set a pause between the rounds, default are 15 sec. -->
			<pause_between_round>15</pause_between_round>

			<!--  Allow the players who are waiting for a match to play on different maps, default are 600 sec. -->
			<waiting_time_max>600</waiting_time_max>
		</chase>


		<!--
		Settings for Knockout.Script.txt
		https://forum.maniaplanet.com/viewtopic.php?p=247611
		//-->
		<knockout>
			<!-- Default finish timout -->
			<finish_timeout>20</finish_timeout>

			<!-- Amount of maps on each map. If set 0 or below rounds are infinite. Otherwise map is played n rounds and after that Knockout continues on the next map. -->
			<rounds_per_map>3</rounds_per_map>

			<!-- DoubleKO mode - knock 2 players until setting value is reached (default: 20) -->
			<double_knockout_until>20</double_knockout_until>

			<!-- Set number of laps. If set 0 or below laps are infinite. Otherwise players can drive n amount of laps, then Knockout continues on the next map. Players that do not finish after timeout are not KO. -->
			<force_laps_number>-1</force_laps_number>

			<!-- Ability to hide multilap info when at least <force_laps_number> is set to > 0 -->
			<show_multilap_info>false</show_multilap_info>
		</knockout>


		<!--
		Settings for Doppler.Script.txt
		https://forum.maniaplanet.com/viewtopic.php?f=9&t=30463
		//-->
		<doppler>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>

			<!-- Switch between Laps and Speed mode (needs a script reload to take effect) -->
			<laps_speed_mode>true</laps_speed_mode>

			<!-- If a player press the restart button, his current lap speed summary will be dumped (prevents using the same CP again and again) -->
			<dump_speed_on_reset>true</dump_speed_on_reset>

			<!-- Set to 'KPH' or 'MPH' -->
			<velocity_unit>KPH</velocity_unit>

			<!-- Setup to 'false' to prevent the best players module to be shown, otherwise to 'true'. -->
			<module_best_players_show>false</module_best_players_show>

			<!-- Adds this integer to the modules "X,Y" coordinates, X default value is "140". -->
			<module_best_players_position>0,0</module_best_players_position>
		</doppler>
	</modesetup>



	<!--
	Settings for MatchMaking
	Documentation: http://doc.maniaplanet.com/dedicated-server/settings-list.html#ModeMatchmaking
	//-->
	<matchmaking>
		<!-- URL of the matchmaking API. If you don't plan to use a custom matchmaking function leave this setting at its default value. -->
		<matchmaking_api_url>https://matchmaking.maniaplanet.com/v8</matchmaking_api_url>

		<!--
		This is the most important setting, it can take one of these values:
		0 -> matchmaking turned off, standard server
		1 -> matchmaking turned on, use this server as a lobby server
		2 -> matchmaking turned on, use this server as a match server
		3 -> matchmaking turned off, use this server as a universal lobby server
		4 -> matchmaking turned off, use this server as a universal match server
		//-->
		<matchmaking_mode>0</matchmaking_mode>

		<!--
		Set the minimum ratio of players that have to agree to play a rematch before launching one.
		The value range from 0.0 to 1.0. Any negative value turns off the rematch vote.
		//-->
		<matchmaking_rematch_ratio>-1.0</matchmaking_rematch_ratio>

		<!-- Set the maximum number of consecutive rematches possible. -->
		<matchmaking_rematch_number_max>2</matchmaking_rematch_number_max>

		<!-- (Dis-)Allow the players to vote for the next map. -->
		<matchmaking_vote_for_map>false</matchmaking_vote_for_map>

		<!-- Enable or disable the progressive matchmaking. -->
		<matchmaking_progressive>false</matchmaking_progressive>

		<!-- Waiting time at the beginning of the matches. -->
		<matchmaking_waiting_time>45</matchmaking_waiting_time>

		<!-- Number of rounds played before switching to the next map. -->
		<lobby_round_per_map>6</lobby_round_per_map>

		<!-- Set how many times the matchmaking function is called before ending the current round of King of the Lobby. -->
		<lobby_matchmaker_per_round>30</lobby_matchmaker_per_round>

		<!-- Set the waiting time before calling the matchmaking function again. -->
		<lobby_matchmaker_wait>2</lobby_matchmaker_wait>

		<!-- Duration (in seconds) of the matchmaking function. It allows the players to see who they will play their match with or cancel it if necessary. -->
		<lobby_matchmaker_time>8</lobby_matchmaker_time>

		<!-- Display a list of Masters players in the lobby. -->
		<lobby_display_masters>true</lobby_display_masters>

		<!-- Disable lobby UI -->
		<lobby_disable_ui>false</lobby_disable_ui>

		<!-- This message is displayed in the chat to inform the players that an error occured in the matchmaking system. -->
		<matchmaking_error_message>An error occured in the matchmaking API. If the problem persist please try to contact this server administrator.</matchmaking_error_message>

		<!--
		Log the API errors. You can activate it if something doesn't work and you have to investigate.
		Otherwise it's better to leave it turned off because this can quickly write huge log files.
		//-->
		<matchmaking_log_api_error>false</matchmaking_log_api_error>

		<!-- Same as above, only turn it on if necessary. -->
		<matchmaking_log_api_debug>false</matchmaking_log_api_debug>

		<!-- Same as above, only turn it on if necessary. -->
		<matchmaking_log_misc_debug>false</matchmaking_log_misc_debug>

		<!-- Average waiting time before progressive matchmaking activate. -->
		<progressive_activation_waiting_time>180000</progressive_activation_waiting_time>

		<!-- Multiply the required players nb by this, if there's less player in the lobby activate progressive. -->
		<progressive_activation_players_number_ratio>1</progressive_activation_players_number_ratio>
	</matchmaking>


